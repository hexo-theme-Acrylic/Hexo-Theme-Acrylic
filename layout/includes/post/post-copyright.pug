if theme.copyright.enable && page.copyright !== false
  - let author = page.copyright_author ? page.copyright_author : config.author
  - let url = page.copyright_url ? page.copyright_url : page.permalink
  - let info = page.copyright_info || _p('post.copyright.copyright_content', theme.copyright.license_url, theme.copyright.license, config.url, config.title)
  .post-copyright
    .post-copyright__author
      if page.cc
        a.post-copyright__original(title='该文章为转载文章，注意版权协议', href=`${theme.copyright.link}`, data-pjax-state) #[=page.cc]
      else 
        a.post-copyright__original(title='该文章为原创文章，注意版权协议', href=`${theme.copyright.link}`, data-pjax-state) 原创
      a.post-copyright-title(href='#' data-pjax-state='')
        span #[=page.title]
    .post-copyright__type
      span#post-copyright-url.post-copyright-info
        a(href=url_for(url))= decodeURI(url)
      button.post-copyright-copybtn(onclick='rm.copyPageUrl()')
        i.heofont.icon-file-copy-fill
    .post-copyright__notice
      span.post-copyright-info!= info